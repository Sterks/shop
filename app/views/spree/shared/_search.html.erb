<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>
<div class="search-box">
  <%= form_tag spree.products_path, :method => :get, class: "" do %>
    <% cache(cache_key_for_taxons) do %>
      <%= select_tag :taxon,
            options_for_select([[Spree.t(:all_departments), '']] +
                                  @taxons.map {|t| [t.name, t.id]},
                                  @taxon ? @taxon.id : params[:taxon]), 'aria-label' => 'Taxon', class: "cate-dropdown hidden-xs" %>
    <% end %>
    <%= search_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), class: "", id: "search" %>
    <%= submit_tag Spree.t(:search), :name => nil, class: "search-btn-bg", id: "submit-button" %>
  </div>
<% end %>